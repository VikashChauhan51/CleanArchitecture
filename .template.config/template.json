{
  "$schema": "http://json.schemastore.org/template",
  "author": "Vikash Chauhan",
  "classifications": ["Web", "API"],
  "identity": "CleanArchitecture.Template",
  "name": "Clean Architecture Template",
  "shortName": "cleanarch",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "CleanArchitecture",
  "preferNameDirectory": true,
  "symbols": {
    "useSqlServer": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Use Microsoft SQL Server"
    },
    "usePostgreSQL": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Use PostgreSQL"
    },
    "DatabaseProvider": {
      "type": "generated",
      "generator": "evaluate",
      "parameters": {
        "expression": "(useSqlServer ? 'Microsoft.EntityFrameworkCore.SqlServer' : (usePostgreSQL ? 'Npgsql.EntityFrameworkCore.PostgreSQL' : ''))"
      }
    },
    "DatabaseProviderVersion": {
      "type": "generated",
      "generator": "evaluate",
      "parameters": {
        "expression": "(useSqlServer ? '9.0.1' : (usePostgreSQL ? '9.0.3' : ''))"
      }
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(useSqlServer || usePostgreSQL)",
          "include": [
            "CleanArchitecture.Infrastructure/CleanArchitecture.Infrastructure.csproj"
          ],
          "replacements": {
            "DatabaseProvider": "${DatabaseProvider}",
            "DatabaseProviderVersion": "${DatabaseProviderVersion}"
          }
        }
      ]
    }
  ]
}
